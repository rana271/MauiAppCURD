<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCURD.MainPage" Title="Add Employee">

    <VerticalStackLayout>
        <Entry Placeholder="Name" x:Name="name"></Entry>
        <Entry Placeholder="Email" x:Name="email"></Entry>
        <Entry Placeholder="Address" x:Name="address"></Entry>
        <Button Text="Add" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>

</ContentPage>
